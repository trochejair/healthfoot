@using Web.HealthFoot.Models

@{
    ViewBag.Title = "Modifica Rol";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@section botones{

    <div class="row">
        <div class="col-md-12">

            @Html.ActionLink("Actualizar", "Update", "Roles", new { @class = "btn btn-primary" })
            @Html.ActionLink("Cancelar", "List", "Roles", new { @class = "btn btn-danger" })

        </div>
    </div>
}

<div class="col-12 container">

    <h2>Modifica Rol</h2>

</div>

<div class="container">

    <form>

        <div class="col-12">

            <div class="form-group row">
                <label for="nombre" class="col-sm-2 col-form-label">
                    Nombre
                </label>

                <div class="col-sm-10">

                    <input class="form-control form-control-sm" type="text" placeholder="Introduzca un nombre para el rol" id="Nombre" name="Nombre" value="@ViewBag.Rol.Nombre">

                </div>

            </div>

        </div>

        <div class="col-12">

            <div class="form-group row">

                <label class="col-sm-2 col-form-label">
                    Status
                </label>

                <div class="col-sm-10">

                    <div class="custom-control custom-radio custom-control-inline">

                        @if (@ViewBag.Rol.Status == 1)
                        {

                            <input type="radio" id="Status1" name="Status1" class="custom-control-input" checked>

                        }
                        else
                        {

                            <input type="radio" id="Status1" name="Status1" class="custom-control-input" checked>

                        }
                        <label class="custom-control-label" for="Status1">
                            Activo
                        </label>

                    </div>

                    <div class="custom-control custom-radio custom-control-inline">

                        @if (@ViewBag.Rol.Status == 0)
                        {

                            <input type="radio" id="Status2" name="Status1" class="custom-control-input" checked>

                        }
                        else
                        {

                            <input type="radio" id="Status2" name="Status1" class="custom-control-input">

                        }
                        <label class="custom-control-label" for="Status2">
                            Desactivo
                        </label>

                    </div>

                </div>

            </div>

        </div>

        <div class="col-12">

            <label>Permisos</label>

            <div class="card border border-dark col-6 p-3">

                @for (int i = 0; i < ViewBag.Permiso.Count; i++)
                {

                    <div class="checkbox-wrapper-mail">

                        @if (i < ViewBag.PermisosRol.Count &&
                            ViewBag.PermisosRol[i].Permiso.Id == ViewBag.Permiso[i].Id)
                        {

                            <input type="checkbox" id="@ViewBag.Permiso[i].Id" checked>

                        }
                        else
                        {

                            <input type="checkbox" id="@ViewBag.Permiso[i].Id">

                        }

                        <label for="@ViewBag.Permiso[i].Id" class="toggle">

                            @ViewBag.Permiso[i].Nombre

                        </label>


                    </div>

                }

            </div>

        </div>

    </form>

</div>
