@using Web.HealthFoot.Models

@{
    ViewBag.Title = "Crear Rol";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@section botones{

    <div class="row">
        <div class="col-md-12">

            @Html.ActionLink("Crear", "Store", "Roles", new { @class = "btn btn-primary" })
            @Html.ActionLink("Cancelar", "List", "Roles", new { @class = "btn btn-danger" })

        </div>
    </div>
}

<div class="col-12 container">

    <h2>Crear Rol</h2>

</div>

<div class="container">

    <form>

        <div class="col-12">

            <div class="form-group row">
                <label for="nombre" class="col-sm-2 col-form-label">
                    Nombre
                </label>

                <div class="col-sm-10">

                    <input class="form-control form-control-sm" type="text" placeholder="Introduzca un nombre para el rol" id="Nombre" name="Nombre">

                </div>

            </div>

        </div>

        <div class="col-12">

            <div class="form-group row">

                <label class="col-sm-2 col-form-label">
                    Status
                </label>

                <div class="col-sm-10">

                    <div class="custom-control custom-radio custom-control-inline">

                        <input type="radio" id="Status1" name="Status1" class="custom-control-input">
                        <label class="custom-control-label" for="Status1">
                            Activo
                        </label>

                    </div>

                    <div class="custom-control custom-radio custom-control-inline">

                        <input type="radio" id="Status2" name="Status1" class="custom-control-input">
                        <label class="custom-control-label" for="Status2">
                            Desactivo
                        </label>

                    </div>

                </div>

            </div>

        </div>

        <div class="col-12">

            <label>Permisos</label>

            <div class="card border border-dark col-6 p-3">

                @foreach (Permiso Permiso in ViewBag.Permiso)
                {

                    <div class="checkbox-wrapper-mail">

                        <input type="checkbox" id="@Permiso.Id" />
                        <label for="@Permiso.Id" class="toggle">
                            @Permiso.Nombre
                        </label>

                    </div>

                }

            </div>

        </div>

    </form>

</div>
