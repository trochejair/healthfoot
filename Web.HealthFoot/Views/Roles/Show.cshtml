@using Web.HealthFoot.Models

@{
    ViewBag.Title = "Show";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@section botones{

    <div class="row">
        <div class="col-md-12">

            @Html.ActionLink("Editar", "Edit", "Roles", new { id = @ViewBag.Rol.Id }, new { @class = "btn btn-primary" })
            @Html.ActionLink("Regresar", "List", "Roles", new { @class = "btn btn-danger" })

        </div>
    </div>
}

        <div class="col-12 container">

            <h2>Ver Rol</h2>

        </div>

            <div class="container">

                <div class="form-group row">
                    <label for="example-text-input" class="col-sm-2 col-form-label">
                        Nombre:
                    </label>
                    <div class="col-sm-10">
                        <label>
                            @ViewBag.Rol.Nombre
                        </label>
                    </div>
                </div>

                <div class="form-group row">
                    <label for="example-text-input" class="col-sm-2 col-form-label">
                        Status:
                    </label>
                    <div class="col-sm-10">
                        <label class"form-control" type="text">
                            @ViewBag.Rol.Status
                        </label>
                    </div>
                </div>

                <label>Permisos</label>

                <div class="card border border-dark col-6 p-3">

                    @if (ViewBag.PermisosRol.Count != 0)
                    {

                        foreach (PermisosRol PermisosRol in ViewBag.PermisosRol)
                        {

                            <div class="checkbox-wrapper-mail">

                                <label class="toggle">
                                    @PermisosRol.Permiso.Nombre
                                </label>

                            </div>

                        }

                    }
                    else
                    {

                        <label>No posee permisos administrativos</label>

                    }

                </div>

            </div>