
@{
    ViewBag.Title = "Proveedores";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@section botones{
    <div class="row">
        <div class="col-md-12">
            <button class="btn btn-primary">
                Agregar
            </button>
        </div>
    </div>
}
    <div class="row">
        <div class="col-md-12">
            <h2>Proveedores</h2>
        </div>
        <div class="col-md-12">
            <table class="table datatable">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nombre</th>
                        <th>Dirección</th>
                        <th>Teléfono</th>
                        <th>Correo</th>
                        <th></th>
                    </tr>
                </thead>

                <tbody>
                    @for (int x = 1; x < 12; x++)
                    {
                        <tr>
                            <td>@x </td>
                            <td>Proveedor @x</td>
                            <td>Dirección ejemplo</td>
                            <td>7224183004</td>
                            <td>example @x@@example </td>
                            <td>
                                <i class="fas fa-eye"></i>
                                <i class="fas fa-edit"></i>
                                <i class="fas fa-clipboard"></i>
                                <i class="fas fa-trash"></i>
                            </td>
                        </tr>

                    }
                </tbody>

            </table>
        </div>
    </div>
