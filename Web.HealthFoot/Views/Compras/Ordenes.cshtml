
@{
    ViewBag.Title = "Ordenes";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@section botones{
    <div class="row">
        <div class="col-md-12">
            @Html.ActionLink("Agregar", "Create", "Ordenes", new { area = "" }, new { @class = "btn btn-primary" })
        </div>
    </div>
}
<div class="row">
    <div class="col-md-12">
        <h2>Ordenes</h2>
    </div>
    <div class="col-md-12">
        <table class="table datatable">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Proveedor</th>
                    <th>Nombre</th>
                    <th>Cantidad</th>
                    <th></th>
                </tr>
            </thead>

            <tbody>
                @for (int x = 1; x < 12; x++)
                {
                <tr>
                    <td>@x </td>
                    <td>Proveedor @x </td>
                    <td>Insumo @x</td>
                    <td>@x</td>
                    <td>
                        <i class="fas fa-eye"></i>
                        <i class="fas fa-edit"></i>
                        <i class="fas fa-trash"></i>
                    </td>
                </tr>

                }
            </tbody>

        </table>
    </div>
</div>
