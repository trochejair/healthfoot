@using Web.HealthFoot.Models

@{
    ViewBag.Title = "Direcciones";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="col-12 container">

    <h2>Usuario</h2>

</div>

<ul class="nav nav-tabs nav-tabs-custom" role="tablist">

    <li class="nav-item">

        @Html.ActionLink("General", "Edit", "Usuarios", new { id = ViewBag.UsuarioId }, new { Class = "nav-link" })

    </li>

    <li class="nav-item">

        @Html.ActionLink("Directorio", "List", "Directorio", new { id = ViewBag.UsuarioId }, new { Class = "nav-link active" })

    </li>

</ul>

<br />
<br />

<div class="col-12 p-4">

    <div class="row">

        @foreach (Directorio Directorio in ViewBag.Directorio)
        {

            <div class="p-3 col-4">

                <div class="border border-dark modal-content">

                    <div class="modal-header">

                        @Html.ActionLink("X", "Delete", "Directorio", new { @class = "close" })


                    </div>

                    <div class="modal-body">

                        <div class="form-group">

                            <label>Direccion: @Directorio.Calle</label>
                            <br />
                            <label>Ciudad: @Directorio.Ciudad</label>
                            <br />
                            <label>Estado: @Directorio.Estado</label>
                            <br />
                            <label>País: @Directorio.Pais</label>
                            <br />
                            <label>CP: @Directorio.CP</label>

                        </div>

                    </div>

                    <div class="modal-footer">

                        <a href="@Url.Action( "Edit", "Directorio", new { idUs = ViewBag.UsuarioId, id = Directorio.Id })" class = "btn btn-dark">
                            
                            <i class="fas fa-edit"></i>
                        
                        </a>

                    </div>

                </div>

            </div>

        }

        <div class="p-3 col-4">

            <a href="@Url.Action("Create", "Directorio", new { idUs = ViewBag.UsuarioId })" class="border border-dark btn btn-success modal-content">

                <div class="modal-body text-center">

                    <i class=" mdi mdi-plus-circle-outline mdi-48px"></i>
                    <br />
                    Agregar nueva dirección

                </div>

            </a>

        </div>

    </div>
