@{
    ViewBag.Title = "Productos";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@section botones{
    <div class="row">
        <div class="col-md-12">
            <button class="btn btn-primary">
                Agregar
            </button>
        </div>
    </div>
}
<div class="row">
    <div class="col-md-12">
        <h2>Proveedores</h2>
    </div>
    <div class="col-md-12">
        <table class="table datatable">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nombre</th>
                    <th>Descripción</th>
                    <th>Categoría</th>
                    <th>Precio</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @for (int x = 1; x < 12; x++)
                {
                    <tr>
                        <td>@x </td>
                        <td>Producto @x</td>
                        <td>Descripción</td>
                        <td>Categoría ejemplo</td>
                        <td>50.00</td>
                        <td>
                            <a href="@Url.Action("Details","Productos")"><i class="fas fa-eye"></i></a>
                            <a href="@Url.Action("Edit","Productos")"> <i class="fas fa-edit"></i></a>
                                <i class="fas fa-trash"></i>
</td>
                    </tr>

                }
            </tbody>
        </table>
    </div>
</div>